#!/bin/bash

msg_trap() {
    echo "Não pode sair desta forma"
}

trap msg_trap SIGINT SIGTERM

semestre() {
    mes=$(date "+%m")
    if (( mes < 7 )); then
        echo "1"
    else    
        echo "2"
    fi
}

ano=$(date "+%Y")
dia=$(date "+%d")
mes=$(date "+%B")
hora=$(date "+%H")
minutos=$(date "+%M")

menu() {
    echo "################################################################"
    # Seu código de menu aqui
    echo "################################################################"
}

while true; do
    menu
    read -r opcao

    case $opcao in
        1)
            # código da opção 1
            ;;
        2)
            # código da opção 2
            ;;
        3)
            # código da opção 3
            ;;
        4)
            # código da opção 4
            ;;
        *)
            echo "opção inválida, tente novamente"
            ;;
    esac
done
